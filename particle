#include<Wire.h>


int led1 =A0; 


void setup() {
    
    Wire.begin(0x8);
    Wire.onReceive(receiveEvent); 
   
    pinMode(led1, OUTPUT);
    digitalWrite(led1, LOW);

}

void receiveEvent(int howMany) {
    while (Wire.available()) {
        char c = Wire.read(); 
        digitalWrite(led1, c);
    }
}

void loop() {
    delay(1000);

}
